{
  "name": "appscript-chat-knowledge",
  "version": "0.1.0",
  "description": "Google Apps Script Chat bot for knowledge management.",
  "private": true,
  "type": "module",
  "scripts": {
    "login": "clasp login --no-localhost",
    "push": "clasp push",
    "pull": "clasp pull",
    "open": "clasp open",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "build": "node build/esbuild.config.js && node build/copyManifest.mjs",
    "watch": "node build/esbuild.config.js --watch",
    "deploy": "npm run build && clasp push --rootDir dist && clasp deploy --description \"Deploy from CI\"",
    "logs": "clasp logs --watch",
    "analyse": "node bin/crawl-and-analyse.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "p-map": "^6.0.0",
    "undici": "^6.21.3"
  },
  "devDependencies": {
    "@google/clasp": "^2.5.0",
    "@types/google-apps-script": "^1.0.59",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.21.0",
    "esbuild-gas-plugin": "^0.5.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "gs",
      "mjs",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": {
            "target": "es2022",
            "module": "commonjs",
            "types": ["jest", "google-apps-script"]
          }
        }
      ]
    }
  }
}
